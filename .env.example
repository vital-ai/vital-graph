# VitalGraph Configuration Example
# Copy this file to .env and configure for your environment

# OpenAI API Key for AI features
OPENAI_API_KEY=your-openai-api-key-here

# Application Configuration
APP_MODE=production

# Server Configuration
PORT=8001
HOST=0.0.0.0

# JWT Authentication Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production

# =============================================================================
# VitalGraph Profile-Based Configuration
# =============================================================================
# Set VITALGRAPH_ENVIRONMENT to select which profile to use (local, dev, staging, prod, ecs)
# Each profile uses variables prefixed with the profile name (e.g., LOCAL_*, PROD_*)
VITALGRAPH_ENVIRONMENT=local

# =============================================================================
# LOCAL Profile Configuration (for local development)
# =============================================================================
LOCAL_BACKEND_TYPE=fuseki_postgresql
LOCAL_DB_HOST=host.docker.internal
LOCAL_DB_PORT=5432
LOCAL_DB_NAME=vitalgraph
LOCAL_DB_USERNAME=postgres
LOCAL_DB_PASSWORD=your-password
LOCAL_DB_POOL_SIZE=10
LOCAL_DB_MAX_OVERFLOW=20
LOCAL_DB_POOL_TIMEOUT=30
LOCAL_DB_POOL_RECYCLE=3600

LOCAL_FUSEKI_URL=http://host.docker.internal:3030
LOCAL_FUSEKI_DATASET=vitalgraph
LOCAL_FUSEKI_USERNAME=
LOCAL_FUSEKI_PASSWORD=

LOCAL_STORAGE_BACKEND=minio
LOCAL_STORAGE_ENDPOINT=http://minio:9000
LOCAL_STORAGE_BUCKET=vitalgraph-files
LOCAL_STORAGE_ACCESS_KEY=minioadmin
LOCAL_STORAGE_SECRET_KEY=minioadmin
LOCAL_STORAGE_USE_SSL=false

LOCAL_TABLE_PREFIX=vitalgraph_
LOCAL_LOG_LEVEL=INFO
LOCAL_AUTH_ROOT_USERNAME=admin
LOCAL_AUTH_ROOT_PASSWORD=admin

# =============================================================================
